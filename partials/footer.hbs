{{!--
This footer template is shared across all the pages.
--}}

<footer class="m-footer">
  <style>
    .footer {
      text-align: center;
      color: #fff;
      padding-bottom: 60px; {{!-- copy l-content spacing but for bottom --}}
    }
  </style>
  <div class="pure-g footer">
    <!-- layer 1 footer -->
    <!-- 1/3 spacer -->
    <div class="pure-u-1 pure-u-md-1-3 l-content">
    </div>
    <!-- just logo -->
    <div class="pure-u-1 pure-u-md-1-3 l-content">
      <div class="pure-u-1 m-footer-social">
        {{!-- TODO: re-include once logo exists --}}
        {{!-- {{#if @site.logo}} --}}
        {{#if false}}
        <a href="{{@site.url}}" class="m-logo in-mobile-topbar">
          <img src="{{@site.logo}}" alt="{{@site.title}}">
        </a>
        {{else}}
          <a href="{{@site.url}}" class="m-site-name in-mobile-topbar">
            {{@site.title}}
          </a>
        {{/if}}
      </div>
      <div class="pure-u-1 m-footer-social">
        {{#if @site.facebook}}
        <a href="{{facebook_url @site.facebook}}" target="_blank" rel="noopener" aria-label="Facebook">
          <span class="icon-facebook"></span>
        </a>
        {{/if}}
        {{#if @site.twitter}}
          <a href="{{twitter_url @site.twitter}}" target="_blank" rel="noopener" aria-label="Twitter">
            <span class="icon-twitter"></span>
          </a>
        {{/if}}
        <a href="https://instagram.com/chuckwired" target="_blank" rel="noopener" aria-label="Instagram">
            <span class="icon-instagram"></span>
        </a>
        <a href="https://www.linkedin.com/in/chuckwired/" target="_blank" rel="noopener" aria-label="LinkedIn">
            <span class="icon-linkedin"></span>
        </a>
      </div>
    </div>
    <!-- 1/3 spacer -->
    <div class="pure-u-1 pure-u-md-1-3 l-content">
    </div>
    <!-- layer 2 footer -->
    <!-- TODO: cookies etc -->
    <div class="pure-u-1 pure-u-md-1-3">
    </div>
    <!-- disclaimers -->
    <div class="pure-u-1 pure-u-md-1-3">
      <!-- copyrights -->
      <p class="m-footer-copyright">
        <span>{{@site.title}} &copy; {{date format="YYYY"}}</span>
        <span>&nbsp; &bull; &nbsp;</span>
        <span>{{t "Published with"}} <a href="https://ghost.org" target="_blank" rel="noopener">Ghost</a></span>
      </p>
      <!-- license -->
      <p class="m-footer-copyright">
        <a href="{{asset "html/javascript.html"}}" rel="jslicense">{{t "JavaScript license information"}}</a>
      </p>
      <!-- designed by -->
      <p class="m-footer-copyright">
        <span>Designed with ❤️ by <a href="https://chuckwired.com/" target="_blank">chuckwired</a></span>
      </p>
    </div>
    <!-- spacer -->
    <div class="pure-u-1 pure-u-md-1-3">
    </div>
  </div>
</footer>
